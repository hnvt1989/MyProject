        <p class="button" style="background: #000000; color: #ffffff">
            @Html.ActionLink(Model.GetResource("StoreDetail.AddToCartBtn.Text"), "AddToCart", "ShoppingCart", new { id = @Model.Id }, new { @style = "color: #FFFFFF" })
        </p>

    </div>
</div>



