@using Microsoft.Ajax.Utilities
@using MyProject.AppLogic
@model MyProject.Models.ViewModels.ProductDetailViewModel

@{
    //ViewBag.Title = "ProductDetails";
}

<script src="/Scripts/jquery-2.2.0.min.js" type="text/javascript"></script>

<script>

    function changeDefaultImage(data) {
        var img = document.getElementById("defaultImage");
        var temp = data.src;
        data.src = img.src;
        img.src = temp;

        return false;
    }

</script>

<br />

<div class="row">
    <div class="medium-6 columns">

        <div class="row">
            <div>
                <span style="font-size: 15px; color: #000000"><a href="/Home/Index"> @Model.GetResource("StoreDetail.MainPageUrl.Text") &nbsp;&nbsp;&nbsp;&nbsp;</a></span>
                <span style="font-size: 15px; color: #000000"><a href="/Home/FilterByCategory?code=@Model.Category.Code"> /&nbsp;&nbsp;&nbsp;&nbsp;@Model.Category.Description</a></span>
            </div>
            @if (@Model.ImageAlt0 != null)
            {
                var base64 = Convert.ToBase64String(@Model.ImageAlt0);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img class="thumbnail" id="defaultImage" src="@imgSrc" height="500" width="500"/>
            }
            else
            {
                if (@Model.Image != null)
                            {
                                var base64 = Convert.ToBase64String(@Model.Image);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img class="thumbnail" id="defaultImage" src="@imgSrc" height="500" width="500"/>
                            }
            }
                        
@*            @if (@Model.Image != null)
            {
                var base64 = Convert.ToBase64String(@Model.Image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img class="thumbnail" id="defaultImage" src="@imgSrc" height="500" width="500"/>
            }
            else
            {
                //default image
                <img id="defaultImage" class="thumbnail" src="~/Content/Images/ProductDefault.png" height="500" width="500">
            }*@
