                        <img class="thumbnail" src="@imgSrc" height="100" width="100" onclick=" changeDefaultImage(this); "/>
                    }
                </li>*@
                <li>
                    @if (@Model.ImageAlt1 != null)
                    {
                        var base64 = Convert.ToBase64String(@Model.ImageAlt1);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img class="thumbnail" src="@imgSrc" height="100" width="100" onclick=" changeDefaultImage(this); "/>
                    }
                </li>
            </ul>

            <ul class="tabs" data-tab>
                <li class="tab-title active"><a href="#panel1">@Model.GetResource("StoreDetail.DetailDescription.Text")</a></li>
                <li class="tab-title"><a href="#panel2">@Model.GetResource("StoreDetail.Video.Text")</a></li>

            </ul>
            <div class="tabs-content">
                <div class="content active" id="panel1">
                    <div class="content" style="font-family: Arial; font-size: 10px">
                        @Html.Raw(HttpUtility.HtmlDecode(Model.DetailDescription))
                    </div>
                </div>
                <div class="content" id="panel2">
                    @if (!Model.ReviewVideoUrl.IsNullOrWhiteSpace())
                    {
                        var url = Model.ReviewVideoUrl.Replace("watch?v=", "v/");
                        <div class="row">
                            <iframe width="100%" height="315" src="@url"></iframe>
                        </div>
                    }
                </div>

            </div>

        </div>

    </div>

    <div class="medium-6 large-5 columns">
        <div><span style="font-family: Arial; font-size: 16px"><b>@Model.Description</b></span></div>
        <span style="font-size: 12px; font-family: Arial">@Model.GetResource("StoreDetail.ProductCode.Text") : @Model.Code</span>
        <p></p>
        <div>
            @{
                var total = Model.Price + Model.ShippingCost;

                <div>
                    <span style="font-size: 12px;text-align: right">@Model.GetResource("StoreDetail.Price.Text"): @Model.Price.ToString("0.00")</span>
                </div>

                if (Model.ShippingCost > 0)
                {
                    <div>
                        <span style="font-size: 12px; text-align: right">@Model.GetResource("StoreDetail.ShippingCost.Text"): @Model.ShippingCost.ToString("0.00")</span>
                    </div>

                }

                <div>
                    <span style="font-size: 16px;color: #dc143c">@Model.GetResource("StoreDetail.TotalPrice.Text"): @total.ToString("0.00")</span>
                </div>
            }
            

