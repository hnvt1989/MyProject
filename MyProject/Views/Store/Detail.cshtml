@using Microsoft.Ajax.Utilities
@using MyProject.AppLogic
@model MyProject.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = "ProductDetails";
}

<script>

    function changeDefaultImage(data) {
        var img = document.getElementById("defaultImage");
        var temp = data.src;
        data.src = img.src;
        img.src = temp;

        return false;
    }

</script>

<br />

<div class="row">
    <div class="medium-6 columns">
        <div class="row">
            @if (@Model.Image != null)
            {
                var base64 = Convert.ToBase64String(@Model.Image);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img class="thumbnail" id="defaultImage" src="@imgSrc" height="300" width="300"/>
            }
            else
            {
                //default image
                <img id="defaultImage" class="thumbnail" src="~/Content/Images/ProductDefault.png" height="300" width="300">
            }
            <ul class="small-block-grid-3">
                <li>
                    @if (@Model.ImageAlt0 != null)
                    {
                        var base64 = Convert.ToBase64String(@Model.ImageAlt0);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img class="thumbnail" src="@imgSrc" height="100" width="100" onclick=" changeDefaultImage(this); "/>
                    }
                </li>
                <li>
                    @if (@Model.ImageAlt1 != null)
                    {
                        var base64 = Convert.ToBase64String(@Model.ImageAlt1);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img class="thumbnail" src="@imgSrc" height="100" width="100" onclick=" changeDefaultImage(this); "/>
                    }
                </li>
            </ul>
        </div>


        @if (!Model.ReviewVideoUrl.IsNullOrWhiteSpace())
        {
            var url = Model.ReviewVideoUrl.Replace("watch?v=", "v/");
            <div class="row">

                <h4><span style="color: #dc143c; font-family: Arial"><b>- Video Tư vấn/đánh giá sản phẩm -</b></span></h4>

                <iframe width="100%" height="315" src="@url"></iframe>
            </div>
        }
    </div>

    <div class="medium-6 large-5 columns">
        <h4><span style="color: #ff4500; font-family: Arial"><b>@Model.Description &#10025;</b></span></h4>
        <b>Mã số sản phẩm: @Model.Code</b>
        <div class="content">
            @Html.Raw(HttpUtility.HtmlDecode(Model.DetailDescription))
        </div>
        <div class="panel">
            @if (@Model.OriginalPrice > 0m)
            {
                var percent = 100 - (Model.Price / Model.OriginalPrice) * 100;
                if (percent > 0)
                {
                <b>GIÁ CŨ :<span><del>@Model.OriginalPrice.ToString("N0") đ </del></span></b>
                    
                <div>
                    <span style="font-size: 18px; font-family: Arial; color: #ff4500"><b>GIẢM  :  @percent.ToString("N0") %</b></span>
                </div>   
                }

            }
            <h4><b>SALE: <span style="color: #dc143c">@Model.Price.ToString("N0") đ </span></b></h4>
            <h6 class="subheader">Cước vận chuyển: @Model.ShippingCost.ToString("N0") đ </h6>
            <p class="button">
                @Html.ActionLink("Thêm vào giỏ hàng", "ContinueToCart", "Store", new { id = @Model.Id }, new { @style = "color: #FFFFFF" })
            </p>
        </div>
    </div>
</div>



