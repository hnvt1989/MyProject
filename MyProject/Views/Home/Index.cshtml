        @for (int i = 0; i < Model.Advertisement.Ads.Count; i++)
        {

            if (i == 0)
            {
                <li class="active">
                    @{
                if (Model.Advertisement.Ads[i].Image != null)
                {
                    var base64 = Convert.ToBase64String(Model.Advertisement.Ads[i].Image);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    //var style = "color: #ffffff; background: #dc143c; font-size: 35px; display: block; text-align: center";
                    var text = Model.Advertisement.Ads[i].AdText;
                    var style = Model.Advertisement.Ads[i].AdTextStyle;
                            <a href="@Model.Advertisement.Ads[i].Url">
                                <span style="@style">@text</span>
                                <img alt="slide" src="@imgSrc" height="150" width="1500"/>
                            </a>
                }
                    }

                    @*                <div class="orbit-caption">
                    Caption Two.
                </div>*@
                </li>
            }
            else
            {
                <li>
                    @if (Model.Advertisement.Ads[i].Image != null)
                    {
                        var base64 = Convert.ToBase64String(Model.Advertisement.Ads[i].Image);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        //var style = "color: #ffffff; background: #006400; font-size: 35px; display: block; text-align: center";
                        var text = Model.Advertisement.Ads[i].AdText;
                        var style = Model.Advertisement.Ads[i].AdTextStyle;
                        <a href="@Model.Advertisement.Ads[i].Url">
                            <span style="@style">@text</span>
                            <img alt="slide" src="@imgSrc" height="150" width="1500"/>
                        </a>
                    }
                </li>
            }

        }
    </ul>
}


<div class="large-3 small-12 columns">

    <div class="hide-for-small panel" style="background: #FFFFFF; border: none">
@*        <h3><b><span style="color: #dc143c; text-align: center; display: block" id="catLabel">HOT DEALS </span></b>*@
        </h3>


        <ul class="side-nav">
            @foreach (var c in Model.CategoryViews)
            {
                if (c.ParentId == 0)
                {
                    var children = Model.CategoryViews.Where(c1 => c1.ParentId == c.Id);
                    <span style="font-size: 20px; font-family: Arial">@c.Description</span>
                    foreach (var c1 in children)
                    {
                        
                <li>
                    <a href="/Home/FilterByCategory?code=@c1.Code">
                        @if (c1.Icon != null)
                        {
                            var base64 = Convert.ToBase64String(@c1.Icon);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <img src="@imgSrc" height="10" width="10"/>
                            <span style="font-size: 12px">@c1.Description</span>

                        }
                        else
                        {
                            <span style="font-size: 12px">@c1.Description</span>
                        }
                    </a>
                </li>
                    }
                }
            }
        </ul>
    </div>

