<div class="large-8 columns">
    <div class="row hide-for-large hide-for-landscape">
        <span><b>Danh mục sản phẩm</b></span>
        @Html.DropDownListFor(x => x.SelectedCategory, Model.CategoryList, new { id = "categorySelection", onchange = "document.location.href = '/Home/FilterByCategory?code=' + this.options[this.selectedIndex].value;" })
    </div>
    @if (Model.BestSellingProductsThisMonths.Count > 0)
    {
        <div>
            <h4><b><span style="color: #00008b; text-align: left; display: block" id="catLabel">Sản phẩm bán chạy nhất @DateTime.Now.ToString("yyyy")</span></b>

            <div class="row" data-equalizer="foo" data-options="equalize_on_stack: true">

                @foreach (var product in Model.BestSellingProductsThisMonths)
                {


                    <div class="large-3 columns panel" data-equalizer-watch="foo" style="background: #FFFFFF">

                        @if (product.OriginalPrice > 0 && product.OriginalPrice > product.Price)
                        {
                            var percent = 100 - (product.Price/product.OriginalPrice)*100;
                            <span style="font-size: 18px; font-family: Arial; background: #ff4500; color: #ffffff"><b>Giảm @percent.ToString("N0") %</b></span>
                        }
                        else
                        {
                            <span style="font-size: 18px; font-family: Arial; background: #ffffff; color: #ffffff"><b></b></span>
                        }

                        @if (@product.Image != null)
                        {
                            var base64 = Convert.ToBase64String(@product.Image);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <a href="/Store/Details/@product.Id">
                                <img src="@imgSrc" height="200" width="200"/>
                            </a>
                        }
                        else
                        {
                            <a href="/Store/Details/@product.Id">
                                <img src="~/Content/Images/ProductDefault.png" height="200" width="200"/>
                            </a>
                        }


                        <h5><span style="font-size: 14px; font-family: Arial;"><b>@product.Description</b></span></h5>
                        <h6>
                            @if (product.OriginalPrice > 0 && product.OriginalPrice > product.Price)
                            {
                                <span style="font-size: 16px; font-family: Arial;"><del><b>@product.OriginalPrice.ToString("N0")</b></del></span>
                            }

                            <span style="color: #dc143c; font-family: Arial; font-size: 16px"><b>@product.Price.ToString("N0")</b></span>
                        </h6>
                        <h6>
                            <span style="color: #008000; font-family: Arial; font-size: 12px"><b>@product.BoughtQuantity sản phẩm đã bán! </b></span>
                        </h6>
                    </div>
                }
            </div>
        </div>

    }
    <div>
        <h4><b><span style="color: #00008b; text-align: left; display: block" id="catLabel">@ViewBag.ProductHeader</span></b>

        <div class="row" data-equalizer="foo" data-options="equalize_on_stack: true">

            @foreach (var product in Model.NewProducts)
            {


                <div class="large-3 columns panel" data-equalizer-watch="foo" style="background: #FFFFFF">

                    @if (product.OriginalPrice > 0 && product.OriginalPrice > product.Price)
                    {
                        var percent = 100 - (product.Price/product.OriginalPrice)*100;
                        <span style="font-size: 18px; font-family: Arial; background: #ff4500; color: #ffffff"><b>Giảm @percent.ToString("N0") %</b></span>
                    }
                    else
                    {
                        <span style="font-size: 18px; font-family: Arial; background: #ffffff; color: #ffffff"><b></b></span>
                    }

                    @if (@product.Image != null)
                    {
                        var base64 = Convert.ToBase64String(@product.Image);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <a href="/Store/Details/@product.Id">
                            <img src="@imgSrc" height="200" width="200"/>
                        </a>
                    }
                    else
                    {
                        <a href="/Store/Details/@product.Id">
                            <img src="~/Content/Images/ProductDefault.png" height="200" width="200"/>
                        </a>
                    }


                    <h5><span style="font-size: 14px; font-family: Arial;"><b>@product.Description</b></span></h5>
                    <h6>
                        @if (product.OriginalPrice > 0 && product.OriginalPrice > product.Price)
                        {
                            <span style="font-size: 16px; font-family: Arial;"><del><b>@product.OriginalPrice.ToString("N0")</b></del></span>
                        }

                        <span style="color: #dc143c; font-family: Arial; font-size: 16px"><b>@product.Price.ToString("N0")</b></span>
                    </h6>
                </div>
            }
        </div>
    </div>

