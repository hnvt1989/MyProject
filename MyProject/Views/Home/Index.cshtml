                            {
                                <span style="font-size: 16px; font-family: Arial;"><del><b>@product.OriginalPrice.ToString("N0") đ</b></del></span>
                            }

                                <span style="color: #dc143c; font-family: Arial; font-size: 16px"><b>@product.Price.ToString("N0") đ </b></span>
                            </h6>
                        </div>
                    }
