@model MyProject.Models.ViewModels.HeaderAdvertisementViewModel

@*@{
    ViewBag.Title = "RenderHeaderAdvertisement";
}

<h2>RenderHeaderAdvertisement</h2>*@

<ul class="example-orbit" data-orbit>
    @for (int i = 0; i < Model.Ads.Count; i++)
    {
        if (i == 0)
        {
            <li class="active">
                                            @{
                                                if (Model.Ads[i].Image != null)
                                                {
                                                    var base64 = Convert.ToBase64String(Model.Ads[i].Image);
                                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                    <img alt="slide" src="@imgSrc" height="150" width="1500"/>
                                                }
                                            }

                <div class="orbit-caption">
                    Caption Two.
                </div>
            </li>
        }
        <li>
            @{
                if (Model.Ads[i].Image != null)
                {
                    var base64 = Convert.ToBase64String(Model.Ads[i].Image);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img alt="slide" src="@imgSrc" height="150" width="1500"/>
                }
            }

            <div class="orbit-caption">
                Caption Two.
            </div>
        </li>
        
    }
</ul>

